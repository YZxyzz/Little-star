# LittleStar AI Service Configuration
# Copy this file to .env and fill in your values

# App settings
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/littlestar

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Provider: "dashscope" (通义千问) or "openai"
AI_PROVIDER=dashscope

# Alibaba Cloud DashScope (通义千问)
# Get your API key from: https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_MODEL=qwen-max

# OpenAI (Alternative)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Alibaba Cloud OSS (for audio storage)
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET_NAME=littlestar-audio
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# Alibaba Cloud Speech Recognition
ASR_APP_KEY=your_asr_app_key
